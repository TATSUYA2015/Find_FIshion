<h2 class="text-center"><%= @customer.account %>アカウント編集画面</h2>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-ms-6">
      <%= image_tag @customer.get_profile_image(300,300) %>
    </div>
    <div class="col-md-6 col-ms-6">
      <%= form_with model: @customer, url: web_admin_customer_path, method: :patch do |f| %>
        <table>
          <!--<tr>-->
          <!--  <th>氏名:<%#= f.text_field :last_name %> <%#= f.text_field :first_name %></th>-->
          <!--</tr>-->
          <!--<tr>-->
          <!--  <th>カナ:<%#= f.text_field :last_name_kana %> <%#= f.text_field :first_name_kana %></th>-->
          <!--</tr>-->
          <tr>
            <th>名前:<%= f.text_field :name %></th>
          </tr>
          <tr>
            <th>アカウント名:<%= f.text_field :account %></th>
          </tr>
          <tr>
            <th>アカウント画像:<%= f.file_field :profile_image, accept: "image/*" %></th>
          </tr>
          <tr>
            <th>Email:<%= f.text_field :email %></th>
          </tr>
          <tr>
          <tr>
            <th>電話番号:<%= f.text_field :telephone_number %></th>
          </tr>
          <tr>
            <th>
            退会ステータス</br>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会" %>
            </th>
          </tr>
          <tr>
            <th><%= f.submit "Keep",class: "btn btn-outline-secondary mr-3vw" %></th>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
