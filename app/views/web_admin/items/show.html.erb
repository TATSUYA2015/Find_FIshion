<h2 class="text-center">商品詳細画面</h2>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6">
      <%= image_tag @item.image, width: '100%', height: '100%' %>
      </div>
      <div class="col-md-6 col-sm-6">
        <div class="item-area2">
          <h1 class="text-center"><%= @item.name %></h1>
          <p>商品説明：<%= @item.introduction %></p>
          <%= link_to "Edit", edit_web_admin_item_path, class: "btn btn-outline-secondary mr-3vw" %></br>
           ♥<%= @item.favorites.count %> いいね
          <div>コメント件数:<%= @item.comments.count %></div>
          <div>
            <% @item.comments.each do |comment| %>
              <%= image_tag comment.customer.get_profile_image(50,50) %>
              <%= comment.customer.account %>
              <%= comment.created_at.strftime('%Y/%m/%d') %></br>
              <%= comment.introduction %>
              <%= link_to "削除", item_comment_path(comment.item, comment) ,class: "btn btn-outline-secondary mr-3vw", method: :delete %>
            <% end %>
          </div>
      </div>
    </div>

</div>