<h2 class="text-center">商品編集画面</h2>
<div class="container">
  <div class="row item-area3">
    <div class="col-md-6 col-ms-6">
      <%= image_tag @item.image,size:"300x300" %>
    </div>
    <div class="col-md-6 col-ms-6">
      <table>
        <%= form_with model: @item, url: web_admin_item_path, method: :patch do |f| %>
        <tr>
          <th>商品名:<%= f.text_field  :name %></th>
        <tr>
        <tr>
          <th>商品画像:<%= f.file_field :image, accept: "image/*"%></th>
        </tr>
        <tr>
          <th>ジャンル:<%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></th>
        </tr>
        <tr>
          <th>商品説明:<%= f.text_area :introduction %></th>
        </tr>
        <tr>
          <th><%= f.submit "Keep",class: "btn btn-outline-secondary mr-3vw" %>/<%= link_to "Delete", web_admin_item_path(@item),class: "btn btn-outline-secondary mr-3vw" , method: :delete, "data-confirm" => "本当に削除しますか？"  %></th>
        </tr>
       <% end %>
      </table>
    </div>
  </div>
</div>
