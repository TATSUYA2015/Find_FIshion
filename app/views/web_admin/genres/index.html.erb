<div class="container">
  <h2 class="text-center">Genres 追加</h1>
</div>
</br>
<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <%= form_with model: @genre, url: web_admin_genres_path, method: :post do |f| %>
       <%= f.text_field :name, placeholder: "Genre_Name" %>
       <%= f.submit "New", class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-4 col-sm-4">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Genres</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "Edit", edit_web_admin_genre_path(genre.id), {class: "btn btn-success"} %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>