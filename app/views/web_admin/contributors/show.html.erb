<h2 class="text-center"><%= @contributor.brand_name %> Accunt</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-ms-6">
      <%= image_tag @contributor.get_profile_image(300,300) %>
    </div>
    <div class="col-md-6 col-ms-6">
      <table>
        <tr>
          <th><%= @contributor.followers.count %>フォロー数</th>
        </tr>
        <tr>
          <th>Name:  <%= @contributor.last_name %> <%= @contributor.first_name %></th>
        </tr>
        <tr>
          <th>Kana:  <%= @contributor.last_name_kana %> <%= @contributor.first_name_kana %></th>
        </tr>
        <tr>
          <th>Brand_Name:  <%= @contributor.brand_name %></th>
        </tr>
          <th>E-mail:  <%= @contributor.email %></th>
        <tr>
          <th>〒  <%= @contributor.postal_code %></th>
        </tr>
        <tr>
          <th>Address:  <%= @contributor.address %></th>
        </tr>
        <tr>
          <th>tel:<%= @contributor.telephone_number %></th>
        </tr>
        <tr>
          <th>ブランド説明<%= @contributor.introduction %></th>
        </tr>
        <tr>
          <th>
            <% if @contributor.is_deleted %>
              退会済み
            <% else %>
              有効
            <% end %>
          </th>
        </tr>
        <tr>
          <th><%= link_to "Edit",edit_web_admin_contributor_path(@contributor.id),class: "btn btn-outline-secondary mr-3vw" %> / <%= link_to "Followers",followers_web_admin_contributor_path(@contributor.id),class: "btn btn-outline-secondary mr-3vw" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
<h2 class="text-center">Item</h2>
<div class="container">
    <div class="row step-box1-2">
        <% @items.each do |item| %>
            <% if item.contributor.id == @contributor.id %>
                <%= link_to web_admin_item_path(item.id), class: "text-secondary" do %>
                    <div class="card  shadow-lg">
                      <%= image_tag item.image,size:"300x300" %></br>
                      <%= item.name %></br>
                    </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>