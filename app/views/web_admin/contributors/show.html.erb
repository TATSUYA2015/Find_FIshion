<h2 class="text-center"><%= @contributor.brand_name %>のアカウント情報</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-ms-6">
      <%= image_tag @contributor.get_profile_image(300,300) %>
    </div>
    <div class="col-md-6 col-ms-6">
      <table>
        <tr>
          <th><%= @contributor.followers.count %>フォロー数</th>
        </tr>
        <tr>
          <th>氏名:<%= @contributor.last_name %> <%= @contributor.first_name %></th>
        </tr>
        <tr>
          <th>カナ:<%= @contributor.last_name_kana %> <%= @contributor.first_name_kana %></th>
        </tr>
        <tr>
          <th>ブランド名:<%= @contributor.brand_name %></th>
        </tr>
          <th>E-mail:<%= @contributor.email %></th>
        <tr>
          <th>郵便番号:<%= @contributor.postal_code %></th>
        </tr>
        <tr>
          <th>住所:<%= @contributor.address %></th>
        </tr>
        <tr>
          <th>電話番号:<%= @contributor.telephone_number %></th>
        </tr>
        <tr>
          <th>
            <% if @contributor.is_deleted %>
              退会済み
            <% else %>
              有効
            <% end %>
          </th>
        </tr>
        <tr>
          <th><%= link_to "Edit",edit_web_admin_contributor_path(@contributor.id) %></th>
        </tr>
      </table>
    </div>
  </div>
</div>

<h2 class="text-center">フォロワー一覧</h2>
<%#= link_to"Follor", followers_post_admin_contributor_path(@contributor.id) %>
<%# @follower.customers.each do |customer| %>
  <%#= customer.account %></br>
<%# end %>
</br>
<h2 class="text-center">投稿一覧</h2>
<div class="container">
    <div class="step-box1-2">
        <% @items.each do |item| %>
            <% if item.contributor.id == @contributor.id %>
                <%= link_to item_path(item.id) do %>
                    <div class="card  shadow-lg">
                      <%= image_tag item.image,size:"300x300" %></br>
                      <%= item.name %></br>
                    </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>