<link rel="stylesheets" href="public/homes.scss"/>

  <h1 class="title">Brand</h1>
    <div class="container">
      <div class="step-box">
        <% @contributors.each do |contributor| %>
          <div class="card  shadow-lg">
            <%= link_to contributor_path(contributor.id) do %> <!--各ブランド情報ページのリンク -->
              <div class="step-image"><%= image_tag contributor.get_profile_image(150,150) %></div></br>
              <div class="step-name"><%= contributor.brand_name %></div></br>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
</div>