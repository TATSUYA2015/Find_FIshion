<h2 class="text-center">Sign up</h2>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= render "public/shared/error_messages", resource: resource %>
  <div class="text-center">
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  </br>
  <div class="text-center">
    <%= f.text_field :account, placeholder: "Account @~~" %>
  </div>
  </br>
  <div class="text-center">
    <%= f.email_field :email, placeholder: "E-mail", autofocus: true, autocomplete: "email" %>
  </div>
  </br>
  <div class="text-center">
    <!--<%# if @minimum_password_length %>-->
    <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
    <!--<%# end %>-->
    <%= f.password_field :password, placeholder: "Password 6文字以上", autocomplete: "new-password" %>
  </div>
  </br>
  <div class="text-center">
    <%= f.password_field :password_confirmation, placeholder: "同じ Password", autocomplete: "new-password" %>
  </div>
  </br>
   <div class="text-center">
    <%= f.text_field :telephone_number, placeholder: "000-0000-0000" %>
  </div>
  </br>
  <div class="text-center">
    <%= f.submit "Sign up", class: "btn btn-outline-secondary mr-3vw" %>
  </div>
<% end %>
<div class="text-center">
  <%= render "public/shared/links" %>
</div>