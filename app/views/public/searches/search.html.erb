<h2>検索一覧</h2>

<table>
  <!--検索対象モデルがcontributorの時 -->
  <% if @range == "brand_name" %>
    <tbody>
      <% @contributors.each do |contributor| %>
        <tr>
          <td>
            <%= link_to contributor_path(contributor.id) do %>
              <%= contributor.brand_name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがItemの時) -->
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= link_to item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>